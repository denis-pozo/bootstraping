# Useful paths
export PATH_TO_PROJECT="$HOME/development/projects"
export PATH_TO_PLAYGROUND="$HOME/development/playground"
export JAVA_HOME=/usr/libexec/java_home
export M2_HOME=/usr/local/Cellar/maven/3.5.0
export RVM_HOME=$HOME/.rvm                        # Add RVM to PATH for scripting
export PATH=$PATH:$JAVA_HOME/bin:$M2_HOME/bin:$RVM_HOME/bin

# Maven 
export MAVEN_OPTS="-Xmx1024m"


# Customize prompt to show only the working directory
export PS1='[\W]\$ '
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# This should be the last line of the file, do not make edits below
[ -f ".exports.local" ] && source ".exports.local"
